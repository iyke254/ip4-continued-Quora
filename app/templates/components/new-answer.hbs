{{#if addNewAnswer}}

<h1>New Answer</h1>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="reply">Answer</label>
      {{input value=reply id="reply"}}
    </div>
    <button {{action 'saveAnswer'}}> Save</button>
  </form>
</div>
{{else}}
<button {{action 'answerFormShow'}}>Submit an Answer</button>
{{/if}}
