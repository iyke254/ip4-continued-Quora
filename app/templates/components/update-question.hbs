{{#if updateQuestionsForm}}
<h4> Update {{question.name}}'s question</h4>
<div>
  <form>
    <div class="form-group">
      <label for="name">Name</label>
      {{input value=name id="name" placeholder=question.name}}
    </div>
    <div class="form-group">
      <label for="query">Question</label>
      {{input value=query id="query" placeholder=question.query}}
    </div>
    <div class="form-group">
      <label for="details">More on the Question</label>
      {{input value=details id="details" placeholder=question.details}}
    </div>

    <button {{action 'update' questions}}>Save</button>
  </form>
</div>
{{else}}

<button{{action 'updateQuestionsForm'}}>Update</button>  
